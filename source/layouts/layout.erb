<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <!-- page title and meta description -->
    <title><%= current_page.data.title || "Progressive Abacus Worksheets" %></title>

    <meta content="<%= current_page.data.description || 'Printable abacus worksheets for all skill levels. Choose the difficulty with the custom worksheet generator or go stepwise with the abacus fundamentals course.' %>" name="description" />

    <!--pure-css framework and reset-->
    <%= stylesheet_link_tag "base-min" %>
    <%= stylesheet_link_tag "pure-min" %>
    <%= stylesheet_link_tag "grids-responsive-min" %>


     <!--custom stylesheets-->
    <%= stylesheet_link_tag "stylesheet" %>
    <%= stylesheet_link_tag "modal" %>
    <%= stylesheet_link_tag "levels" %>
    <%= stylesheet_link_tag "header" %>
    <%= stylesheet_link_tag "custom" %>
    <%= stylesheet_link_tag "skills" %>
    <%= stylesheet_link_tag "footer" %>
    <%= stylesheet_link_tag "homepage" %>
    

     <!--google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600" rel="stylesheet">


    
  </head>
  <body>
    <div class="entire-content">
    <%= partial 'partials/header' %>
    <%= yield %>
    </div>
    <div>
    <%= partial 'partials/footer' %>
    </div>

    <%= javascript_include_tag "site" %>
    <%= javascript_include_tag "header" %>
  </body>
</html>
